{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "TFT Data Recorder",
    "version": "1.0.0",
    "minimum-overwolf-version": "0.170.0",
    "author": "PrelaunchZeus2",
    "icon": "images/Icon.png",
    "icon_gray": "images/Icon_grey.png",
    "description": "An app to record TFT game data and save it to a CSV file."
  },
  "permissions": [
    "GameInfo",
    "FileSystem"
  ],
  "data": {
    "start_window": "background",
    "windows": {
      "background": {
        "file": "src/background.html",
        "background": true,
        "resizable": true,
        "show_in_taskbar": false
      },
      "main": {
        "file": "src/index.html",
        "native_window": true,
        "resizable": true,
        "show_in_taskbar": true,
        "size": {
          "width": 1920,
          "height": 1080
        }
      },
      "logWindow": {
        "file": "src/logWindow.html",
        "native_window": true,
        "resizable": true,
        "show_in_taskbar": true,
        "size": {
          "width": 400,
          "height": 500
        }
      }
    }
  }
}